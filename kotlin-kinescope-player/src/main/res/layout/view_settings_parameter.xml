<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_speed_cl"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/sel_settings_item"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_playback_speed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:includeFontPadding="false"
        android:textAppearance="@style/Regular.14.White"
        app:layout_constraintBottom_toBottomOf="@id/icon_iv"
        app:layout_constraintStart_toEndOf="@id/icon_iv"
        app:layout_constraintTop_toTopOf="@id/icon_iv"
        tools:text="Playback speed" />

    <TextView
        android:id="@+id/current_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:includeFontPadding="false"
        android:textAppearance="@style/Regular.12.Gray"
        app:layout_constraintBottom_toBottomOf="@id/forward_iv"
        app:layout_constraintEnd_toStartOf="@id/forward_iv"
        app:layout_constraintTop_toTopOf="@id/forward_iv"
        tools:text="Normal" />

    <ImageView
        android:id="@+id/forward_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>